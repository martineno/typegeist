{
  "name": "Typegeist Locals",
  "version": "1.0",
  "description": "Gather type stats about the current page.",
  "background_page": "background.html",
  "content_scripts": [{
    "matches": ["http://*/*"],
    "js": ["contentscript.js"]
  }],
  "browser_action": {
    "default_icon": "icon.png",
    "popup": "popup.html"
  },
  "permissions": [
    "tabs", 
    "http://*/*", 
    "http://localhost/" # submitting to typegeist dispatcher
  ]
}